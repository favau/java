package hello;
import java.util.Scanner;
public class Variable1{
	public static void main(String[] args) {
		Scanner x = new Scanner(System.in);
		int k=0;
		int i = x.nextInt();
		int[] a = new int[i];
		for(int j=0;j<=i-1;j++) {
			a[j] = x.nextInt();
			k = x.nextInt();
			a[j] += k; 
			System.out.println(a[j]);	
		}
	}
}
